@using INF272_Project.ViewModels

@{
    ViewBag.Title = "Admin";
}

<h2>Admin</h2>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Login", "MainPage", FormMethod.Post))
        {
            <h2>Login</h2>
            <input type="text" name="Username" placeholder="Username" />
            <input type="password" name="Password" placeholder="Password" />
            <input type="submit" value="Login" />
        }
    </div>
</div>

<input type="button"
       value="Go back"
       onclick="location.href='@Url.Action("Index", "Default")'" />
