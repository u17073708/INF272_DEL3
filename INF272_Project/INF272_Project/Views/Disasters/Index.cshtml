@model IEnumerable<INF272_Project.Models.Disaster>

@{
    ViewBag.Title = "Index";
}

<h2>Disasters</h2>
<h4> Welcome: John Doe</h4>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DisasterDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DamageLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Casualties)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisasterType.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DisasterDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DamageLevel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Casualties)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisasterType.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID }) |
            <input type="button"
                   value="Need Help"
                   onclick="location.href='@Url.Action("Index", "DisasterUsers")'" /> |
            <input type="button"
                   value="Help"
                   onclick="location.href='@Url.Action("Index", "HelpUsers")'" />
        </td>
    </tr>
}

</table>

<br />
<input type="button"
       value="Go back"
       onclick="location.href='@Url.Action("Index", "Default")'" />