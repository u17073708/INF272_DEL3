@model IEnumerable<INF272_Project.Models.Disaster>

@{
    ViewBag.Title = "Index";
}

<h2>Disasters</h2>
<h4> Welcome</h4>

<p>
    @Html.ActionLink("Request to create disaster", "Request")
</p>
<table class="table" border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DisasterDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DamageLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Casualties)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisasterType.Name)
        </th>
       
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DisasterDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DamageLevel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Casualties)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisasterType.Name)
        </td>
       
    </tr>
}

</table>
<br />

<input type="button"
       value="Give Help"
       onclick="location.href='@Url.Action("Index2", "DisasterUsers")'" />
            OR
<input type="button"
       value="Get Help"
       onclick="location.href='@Url.Action("Create", "DisasterUsers")'" />
<br />
<br />
<input type="button"
       value="Go back"
       onclick="location.href='@Url.Action("Index", "Default")'" />